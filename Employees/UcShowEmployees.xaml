<UserControl x:Class="Employees.UcShowEmployees"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Employees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <StackPanel>
        <Label Content="EMPLOYEES" Background="LightGray" HorizontalContentAlignment="Center" />
        <DataGrid x:Name="dgEmployees" Height="250" Margin="30"/>
        <Button x:Name="btnDelete" Content="Delete" Width="50" HorizontalAlignment="Right" Margin="30" Click="btnDelete_Click"/>
    </StackPanel>
</UserControl>
