<Window x:Class="Employees2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employees2"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <DockPanel>
        <StackPanel Width="150" Background="AliceBlue" DockPanel.Dock="Left">
            <Label Content="FEATURES" FontSize="20" HorizontalContentAlignment="Center" Background="LightBlue" Height="40"/>
            <Button x:Name="btnShow" Content="Show employees" Height="30" BorderThickness="0" Background="Azure" Click="btnShow_Click"/>
            <Button x:Name="btnExit" Content="Exit" Height="30" BorderThickness="0" Background="Azure" Click="btnExit_Click" />
        </StackPanel>
        <ContentControl x:Name="contentControl" DockPanel.Dock="Right"></ContentControl>
    </DockPanel>
</Window>
